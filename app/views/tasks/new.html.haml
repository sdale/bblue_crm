.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", tasks_path
      %li.active= link_to "New Task", new_task_path
  .content
    %h2.title= "#{t("web-app-theme.new", :default => "New")} Task"
    .inner
      - form_for :task, :url => tasks_path, :html => { :class => :form } do |f|
        = render :partial => "form", :locals => {:f => f}

- content_for :sidebar, render(:partial => 'sidebar')
